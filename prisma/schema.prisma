generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  creditRenewed DateTime?
  credits       Int       @default(10)
  userType      UserType  @default(FREE)
  accounts      Account[]
  links         Link[]
  tags          Tag[]     // NEW: Relation to user's tags
  sessions      Session[]

  @@map("users")
}

model Link {
  id             String   @id @default(uuid())
  longLink       String
  shortLink      String   @unique
  fullShortLink  String   @unique
  createdAt      DateTime @default(now())
  clickLimit     Int      @default(0)
  expiresAt      DateTime
  userId         String?
  password       String?
  clickCount     Int      @default(0)
  clicks         Click[]
  tags           Tag[]    @relation("LinkTags") // NEW: Many-to-many with tags
  user           User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  isActive       Boolean  @default(true)
  metadata       Json?    // FWD integration: { source, batchId, userId, emailId }

  @@map("links")
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique 
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  links     Link[]   @relation("LinkTags") 

  @@unique([userId, name]) 
  @@map("tags")
}

model Click {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  deviceType String   @default("desktop")
  city       String?
  country    String?
  linkId     String
  browser    String?
  os         String?
  link       Link     @relation(fields: [linkId], references: [id], onDelete: Cascade)

  @@index([linkId])
  @@index([createdAt])
  @@map("clicks")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum UserType {
  FREE
  PREMIUM
}

// FWD Integration: API keys for external apps
model ApiKey {
  id            String    @id @default(cuid())
  key           String    @unique
  name          String    // e.g., "FWD Production"
  webhookUrl    String?   // e.g., "https://fwd.app/api/webhooks/shrnk"
  webhookSecret String?   // For signing webhooks
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  lastUsedAt    DateTime?

  @@map("api_keys")
}